<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Addpage_activity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="영화 제목 검색"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bookinfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTitle" >
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:inputType="text"
                    android:textSize="18dp"
                    android:text="제목"/>
                <TextView
                    android:id="@+id/author"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:inputType="text"
                    android:textSize="18dp"
                    android:text="작가"/>
                <TextView
                    android:id="@+id/bookdetail"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:inputType="text"
                    android:textSize="18dp"


                    android:text="소개"
                    android:maxLines="3"
                    android:ellipsize = "end"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/poster"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/netflix"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType = "centerCrop"/>

        </LinearLayout>


        <TextView
            android:id="@+id/timetext"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ems="12"
            android:text="읽은 날짜"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/bookinfo"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:id="@+id/datebutton"
            app:layout_constraintTop_toBottomOf="@id/bookinfo"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ems="12"
            android:text="시청 날짜"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/timetext"
            />
        <TextView

        android:id="@+id/pagetext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="12"
        android:text="읽은 페이지"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pagetext"
            android:orientation="horizontal"
            android:id="@+id/pagepage">
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/page1"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="쪽부터"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/page2"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="쪽까지"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="인상깊은 구절"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/pagepage"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="인상깊은 구절"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/pagepage"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/log1page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:inputType="number"

            app:layout_constraintTop_toBottomOf="@id/pagepage"
            app:layout_constraintEnd_toStartOf="@id/pagetext2" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="페이지"
            app:layout_constraintTop_toBottomOf="@id/pagepage"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pagetext2"
            android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/log1page"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:id="@+id/log1"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="오늘의 글 기록"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/log1"
            android:layout_marginTop="15dp"
            android:id="@+id/log2text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/log2text"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:id="@+id/log2"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="오늘의 사진 기록"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/log2"
            android:layout_marginTop="15dp"
            android:id="@+id/log3text"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/log3text"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:id="@+id/log3"
            android:src="@drawable/diary"/>


        <Button
            android:id="@+id/addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:text="완료"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/quitbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:text="취소"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
